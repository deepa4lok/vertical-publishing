        <field name="name">All Orders SAO</field>
        <field ref="sale.model_sale_order" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_ads_sales_user'))]"/>
