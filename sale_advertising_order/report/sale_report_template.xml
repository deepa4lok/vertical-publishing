<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!--
                Sale Report (Lines)
    -->
    <template id="report_saleorderlines_document_sao">
        <t t-foreach="doc.order_line.sorted(key=doc.sudo().company_id.sao_orderline_order_field_id.name or None)" t-as="page">

            <t t-set="display_deadline" t-value="any(l.state in ('done','sale') for l in doc.order_line)"/>

            <table class="table table-sm o_main_table table-borderless mt-4">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_date" class="text-center"><strong
                                >Date</strong></th>
                        <th name="th_adv_issue" class="text-start"><strong>Advertising issue</strong></th>
                        <th name="th_deadline" t-if="display_deadline"><strong>Deadline</strong></th>
                        <th name="th_product" class="text-start"><strong>Product</strong></th>
                        <th name="th_quantity" class="text-end"><strong
                                >Quantity</strong></th>
                        <th name="th_price_unit" class="text-end">
                            <strong>Unit Price</strong></th>
                        <th name="th_actprice_unit" class="text-end" t-if="not doc.advertising_agency and doc.company_id.show_actual_unit_price">
                            <strong>Actual Unit Price</strong></th>
                        <th name="th_comdisc" class="text-end" t-if="doc.display_discount_to_customer">
                            <strong>Discount</strong></th>
                        <th name="th_advagency" class="text-end" t-if="doc.advertising_agency">
                            <strong>SBAD</strong></th>
                        <th name="th_subtot" class="text-end">
                            <strong>Tax excluded price</strong></th>
                    </tr>
                </thead>

                <tbody class="sale_tbody">
                    <t t-foreach="doc.order_line" t-as="line">
                        <tr t-foreach="line._sao_expand_multi_for_report()" t-as="l">
                            <td t-if="l.ad_class.date_type == 'validity'">
                                <span t-field="l.from_date"/><span> - </span><span t-field="l.to_date"/>
                            </td>
                            <td t-if="l.ad_class.date_type != 'validity'">
                                <span t-field="l.issue_date"/></td>
                            <td class="text-start">
                                <span t-if="l.adv_issue and l.adv_issue.default_note" t-field="l.adv_issue.default_note"/><span t-if="l.adv_issue and not l.adv_issue.default_note" t-field="l.adv_issue.name"/>
                                <div t-if="l.ad_number" style="font-size:11px;font-style:italic;"><span style="font-weight:bold;">Reference : </span><span t-field="l.ad_number"/></div>
                            </td>
                            <td t-if="display_deadline"><span t-field="l.deadline"/></td>
                            <td class="text-start" t-if="l.product_id" ><span t-field="l.product_id.name"/></td>
                            <td class="text-end">
                                <span t-esc="'%.2f'% l.product_uom_qty"/>
                                <span t-field="l.product_uom" groups="product.group_uom"/>
                            </td>
                            <td class="text-end">
                                <span t-field="l.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                            <td t-if="not doc.advertising_agency and doc.company_id.show_actual_unit_price" class="text-end">
                                <span t-field="l.actual_unit_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                            <td t-if="doc.display_discount_to_customer" class="text-end">
                                <span t-field="l.computed_discount" t-options="{'precision': 2}" /><span>%</span>
                                <div t-if="doc.company_id.sao_show_discount_reason and doc.display_discount_to_customer and l.discount_reason_id" style="font-size:11px;font-style:italic;"><span t-field="l.discount_reason_id.name" /></div>
                            </td>
                            <td t-if="doc.advertising_agency" class="text-end">
                                <span t-field="l.subtotal_before_agency_disc" /> %
                            </td>
                            <td name="line_amount_td" class="text-end" >
                                <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </tbody>

            </table>

            <p></p><!-- prevents misc data -->
            <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                <p style="page-break-before:always;"> </p>
            </t>
        </t>
    </template>


    <!--
                Sale Report
    -->
    <template id="report_saleorder_document_sao">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <t t-set="address" >
                <div t-field="doc.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
            </t>
            <t t-if="doc.partner_invoice_id != doc.partner_id">
                <t t-set="information_block">
                    <strong>Invoicing Address:</strong>
                    <div t-field="doc.partner_invoice_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                </t>
            </t>
            <div class="page" >
                <div class="oe_structure"/>

                <h2 class="mt16">
                    <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                        <span t-if="doc.state not in ['draft','sent']">Order # </span>
                        <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                    </t>
                    <t t-if="env.context.get('proforma', False) or is_pro_forma">
                        <span>Pro-Forma Invoice # </span>
                    </t>
                    <span t-field="doc.name"/>
                </h2>

                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Your Reference:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Order Date:</strong>
                        <p class="m-0" t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Quotation Date:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                        <strong>Expiration:</strong>
                        <p class="m-0" t-field="doc.validity_date"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Salesperson:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Customer Code:</strong>
                        <p class="m-0" t-field="doc.partner_id.ref"/>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Advertiser:</strong>
                        <p class="m-0" t-field="doc.published_customer.name"/>
                    </div>

                </div>

                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>
                <t t-set="tot_Cdiscount" t-value="sum([(l.price_unit * l.product_uom_qty) - l.subtotal_before_agency_disc for l in doc.order_line])"/>

                <div name="order_lines" class="row" style="">
                    <t t-call="sale_advertising_order.report_saleorderlines_document_sao"/>
                </div>

                <div class="clearfix" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                            <table class="table table-sm table-borderless">
                                <tr class="border-black o_subtotal" style="">
                                    <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                    <td name="td_amount_untaxed" class="text-end">
                                        <span t-field="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <tr t-if="doc.display_discount_to_customer" class="o_subtotal" style="">
                                    <td name="td_display_discount"><strong>Discount</strong></td>
                                    <td name="td_display_discount" class="text-end">
                                        <span t-esc="tot_Cdiscount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
<!--                                &lt;!&ndash; Tax totals &ndash;&gt;-->
<!--                                <t t-set="tax_totals" t-value="doc.tax_totals"/>-->
<!--                                <t t-call="account.document_tax_totals"/>-->
                                <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                            <td name="td_amount_by_group_label_3">
                                                <span t-esc="amount_by_group[0]"/>
                                                <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                            </td>
                                            <td name="td_amount_by_group_3" class="text-end o_price_total">
                                                <span t-esc="amount_by_group[1]"
                                                    t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                        </t>
                                        <t t-else ="">
                                            <td name="td_amount_by_group_label">
                                                <span t-esc="amount_by_group[0]"/>
                                            </td>
                                            <td name="td_amount_by_group" class="text-end o_price_total">
                                                <span t-esc="amount_by_group[1]"
                                                    t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>

                                <tr class="border-black o_total">
                                    <td name="td_amount_total_label"><strong>Total</strong></td>
                                    <td name="td_amount_total" class="text-end">
                                        <span t-field="doc.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">
                    <strong>Fiscal Position Remark:</strong>
                    <span t-field="doc.fiscal_position_id.sudo().note"/>
                </p>

                <strong>
                    <p t-field="doc.note" class='text-center' style="font-size:8px"/>
                </strong>

                <p/>
                <p/>
                <p t-if="doc.state not in ['sale','done']" >
                    We would like to thank you for your request. We are looking forward to receiving your response as soon as possible.
                </p>
                <p t-if="doc.state in ['sale','done']" >
                    We would like to thank you and take good care of your order placement.
                </p>
                <br/>

                <table class="table table-condensed">
                    <tbody class="sign-block">
                         <tr t-if="not doc.signature" style="padding-left:15px;page-break-inside:avoid;">
                              <td>
                                  <strong><p>Sincerely,</p></strong>
                                  <span t-field="doc.user_id.name"/>
                            </td>
                            <td t-if="doc.state in ['draft','sent'] or doc.company_id.sao_show_manual_approval_unconditionally">
                                <p><strong>For approval:</strong></p>
                                <span/>
                                <br/>
                                <span>..............................</span>
                                <br/>
                                <span t-field="doc.partner_id.name"/>
                            </td>
                          </tr>
                    </tbody>
               </table>

                <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                    <div class="offset-8">
                        <strong>Signature</strong>
                    </div>
                    <div class="offset-8">
                        <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                    <div class="offset-8 text-center">
                        <p t-field="doc.signed_by"/>
                    </div>
                </div>

                <div class="oe_structure"/>

            </div>
        </t>
    </template>



    <!--
                Report Action (Sale)
    -->
    <template id="sale.report_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="lang" t-value="doc.partner_id.lang"/>
                <t t-if="doc._get_name_quotation_report() == 'sale.report_saleorder_document'"
                    t-call="sale.report_saleorder_document" t-lang="lang"/>

                <t t-if="doc._get_name_quotation_report() == 'sale_advertising_order.report_saleorder_document_sao'"
                    t-call="sale_advertising_order.report_saleorder_document_sao" t-lang="lang"/>
            </t>
        </t>
    </template>

</odoo>
