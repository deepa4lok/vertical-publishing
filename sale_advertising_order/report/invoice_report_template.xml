<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <!--
        SAO: Orderlines
    -->
  <template id="report_invoice_orderlines_document_sao">
    <table class="table table-sm o_main_table" name="invoice_oline_table">
      <thead>
        <tr>
          <th width="10%">Date</th>
          <th width="10%">Advertising Issue</th>
          <th width="10%">Reference</th>
          <th width="10%" class="text-start">Product</th>
          <th width="10%" class="text-end">Volume</th>
          <th
            t-if="display_unit_price or display_agency_discount or display_computed_discount"
            width="5%"
            class="text-end"
          >
            Unit Price
          </th>
          <th width="5%" t-if="display_computed_discount" class="text-end">Discount</th>
          <th width="10%" t-if="display_agency_discount" class="text-end">
            Agency Disc
          </th>
          <th width="10%" class="text-end">Tax Excluded Price</th>
        </tr>
      </thead>
      <tbody>
        <tr t-foreach="o.invoice_line_ids" t-as="l">
          <t t-set="sol" t-value="l.so_line_id or l.sale_line_ids" />
          <t t-set="tot_Cdiscount" t-value="sol.computed_discount" />
          <t t-if="o.move_type != 'out_refund'">
            <td width="10%" t-if="sol.date_type not in ['validity','issue_date']">
              <span t-field="o.invoice_date" />
            </td>
            <t t-if="sol.date_type == 'validity'">
              <td width="10%" t-if="l.from_date">
                <span t-field="l.from_date" />
                <span>-</span>
                <span t-field="l.to_date" />
              </td>
            </t>
            <td width="10%" t-if="sol.date_type == 'issue_date'">
              <span t-field="l.issue_date" />
            </td>
            <td width="10%">
              <span
                t-if="sol.adv_issue and sol.adv_issue.default_note"
                t-field="sol.adv_issue.default_note"
              />
              <span
                t-elif="sol.adv_issue and not sol.adv_issue.default_note"
                t-field="sol.adv_issue.name"
              />
            </td>
          </t>
          <t t-if="o.move_type == 'out_refund'">
            <td width="10%" t-if="sol.date_type not in ['validity','issue_date']">
              <span t-field="o.refund_invoice_id.invoice_date" />
            </td>
            <t t-if="sol.date_type == 'validity'">
              <td width="10%" t-if="l.from_date">
                <span t-esc="l.from_date" />
                <span>-</span>
                <span t-esc="l.to_date" t-options='{"widget": "date"}' />
              </td>
            </t>
            <t t-if="sol.date_type == 'issue_date'">
              <td width="10%">
                <span t-esc="l.issue_date" t-options='{"widget": "date"}' />
              </td>
            </t>
            <td width="10%">
              <span
                t-if="sol.adv_issue and sol.adv_issue.default_note"
                t-field="sol.adv_issue.default_note"
              />
              <span
                t-elif="sol.adv_issue and not sol.adv_issue.default_note"
                t-field="sol.adv_issue.name"
              />
            </td>
          </t>
          <td width="10%">
            <span t-esc="sol.ad_number" />
          </td>
          <td width="10%" class="text-start">
            <span t-if="l.product_id" t-field="l.product_id.name" />
          </td>
          <td width="10%" class="text-end">
            <span t-field="l.quantity" />
            <span t-field="l.product_uom_id" groups="uom.group_uom" />
          </td>
          <t
            t-if="display_unit_price or display_agency_discount or display_computed_discount"
          >
            <td width="5%" class="text-end">
              <span
                t-if="not display_computed_discount"
                t-field="l.price_unit"
                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
              />
              <span
                t-else=""
                t-field="sol.price_unit"
                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
              />
            </td>
          </t>
          <td width="5%" t-if="display_computed_discount" class="text-end">
            <t t-if="sol.computed_discount">
              <span t-field="sol.computed_discount" t-options="{'precision': 2}" />
              <span>%</span>
            </t>
            <div
              t-if="sol.company_id.sao_show_discount_reason and sol.order_id.display_discount_to_customer and sol.discount_reason_id"
              style="font-size:11px;font-style:italic;"
            >
              <span t-field="sol.discount_reason_id.name" />
            </div>
          </td>
          <td width="10%" t-if="display_agency_discount" class="text-end">
            <!--                        <t t-if="o.move_type != 'out_refund'"> FIXME: I see no difference-->
            <!--                            <t t-set="discount_amount" t-value="l.subtotal_before_agency_disc - l.price_subtotal"/>-->
            <!--                        </t>-->
            <!--                        <t t-if="o.move_type == 'out_refund'">-->
            <!--                            <t t-set="discount_amount" t-value="l.subtotal_before_agency_disc - l.price_subtotal"/>-->
            <!--                        </t>-->
            <!--                        <t t-esc="discount_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>-->
            <!--                        (<t t-if="o.move_type != 'out_refund'"><span t-esc="'%.2f'%(l.discount)"/></t><t t-if="o.move_type == 'out_refund'"><span t-esc="'%.2f'%(l.discount)"/>%</t>)-->

            <t
              t-set="discount_amount"
              t-value="l.subtotal_before_agency_disc - l.price_subtotal"
            />

            <span
              t-out="discount_amount"
              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
            />
            <div>
              (
              <span t-field="l.discount" t-options="{'precision': 2}" />
              <span>%</span>
              )
            </div>
          </td>
          <td width="10%" class="is-subtotal text-end">
            <span t-if="o.move_type == 'out_refund'">-</span>
            <span
              t-esc="l.price_subtotal"
              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
            />
          </td>
        </tr>
      </tbody>
    </table>
  </template>

  <!--
        Invoice Report Template
    -->
  <template id="report_invoice_document_sao">
    <t t-call="web.external_layout">
      <t t-set="o" t-value="o.with_context(lang=lang)" />
      <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat" />
      <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
      <t t-set="address">
        <address
          t-field="o.partner_id"
          t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
        />
        <div t-if="o.partner_id.vat" class="mt16">
          <t
            t-if="o.company_id.country_id.vat_label"
            t-esc="o.company_id.country_id.vat_label"
            id="inv_tax_id_label"
          />
          <t t-else="">Tax ID</t>
          :
          <span t-field="o.partner_id.vat" />
        </div>

        <div t-if="o.partner_id.is_company and not o.customer_contact" class="mt16">
          <t>T.a.v.</t>
          :
          <t>Crediteurenadministratie</t>
        </div>
        <div t-if="o.partner_id.is_company and o.customer_contact" class="mt16">
          <t>T.a.v.</t>
          :
          <span t-field="o.customer_contact.name" />
        </div>

        <div
          t-if="o.published_customer and o.published_customer.id != o.partner_id.id"
          class="mt16"
        >
          <t>Advertiser</t>
          :
          <span t-field="o.published_customer.name" />
        </div>
      </t>

      <div class="mt-5">
        <div class="page" style="font-size: smaller">
          <h2>
            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
              Invoice
            </span>
            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
              Draft Invoice
            </span>
            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
              Cancelled Invoice
            </span>
            <span t-if="o.move_type == 'out_refund'">Credit Note</span>
            <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
            <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
            <span t-if="o.name != '/'" t-field="o.name" />
          </h2>

          <div id="informations" class="row mt-4 mb-4">
            <div
              class="col-auto col-3 mw-100 mb-2"
              t-if="o.invoice_date"
              name="invoice_date"
            >
              <t t-if="o.move_type == 'out_invoice'">
                <strong>Invoice Date:</strong>
              </t>
              <t t-elif="o.move_type == 'out_refund'">
                <strong>Credit Note Date:</strong>
              </t>
              <t t-elif="o.move_type == 'out_receipt'">
                <strong>Receipt Date:</strong>
              </t>
              <t t-else="">
                <strong>Date:</strong>
              </t>
              <p class="m-0" t-field="o.invoice_date" />
            </div>
            <div
              class="col-auto col-3 mw-100 mb-2"
              t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
              name="due_date"
            >
              <strong>Due Date:</strong>
              <p class="m-0" t-field="o.invoice_date_due" />
            </div>
            <div class="col-auto col-3 mw-100 mb-2" t-if="o.ref" name="reference">
              <strong>Your Reference:</strong>
              <p class="m-0" t-field="o.ref" />
            </div>
            <div class="col-auto col-3 mw-100 mb-2" name="customer_code">
              <strong>Customer Code:</strong>
              <p class="m-0" t-if="o.partner_id.ref" t-field="o.partner_id.ref" />
              <p
                class="m-0"
                t-elif="o.partner_id.parent_id"
                t-field="o.partner_id.parent_id.ref"
              />
            </div>

            <t
              t-set="sale_orders"
              t-value="o.invoice_line_ids.mapped('sale_order_id')"
            />
            <div
              class="col-auto col-3 mw-100 mb-2"
              t-if="not len(sale_orders) > 1"
              name="so_nr"
            >
              <strong>Sale Order nr:</strong>
              <p class="m-0" t-esc="sale_orders.name" />
            </div>
          </div>

          <t
            t-set="display_agency_discount"
            t-value="any(l.discount for l in o.invoice_line_ids)"
          />
          <t
            t-set="display_computed_discount"
            t-value="any(order.display_discount_to_customer for order in o.invoice_line_ids.sale_line_ids.order_id) and any(line.computed_discount for line in o.invoice_line_ids.sale_line_ids)"
          />
          <t
            t-set="display_unit_price"
            t-value="any([l.quantity>1 for l in o.invoice_line_ids])"
          />
          <t
            t-set="total_before_discount"
            t-value="sum([l.subtotal_before_agency_disc for l in o.invoice_line_ids])"
          />
          <t
            t-set="total_discount"
            t-value="sum([l.subtotal_before_agency_disc - l.price_subtotal for l in o.invoice_line_ids])"
          />

          <br />
          <br />
          <br />
          <!--  Invoice Description    -->
          <div
            style="padding-left:85px;padding-right:15px;"
            t-if="o.invoice_description"
          >
            <strong>
              <p t-field="o.invoice_description" />
            </strong>
          </div>

          <!--  SOL Lines    -->
          <div name="invoice_orderlines" style="" t-if="not o.invoice_description">
            <t t-call="sale_advertising_order.report_invoice_orderlines_document_sao" />
          </div>

          <div class="clearfix mb-4">
            <div id="total" class="row">
              <div
                t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto; font-size: smaller"
              >
                <table
                  class="table table-sm table-borderless"
                  style="page-break-inside: avoid"
                >
                  <tr t-if="display_agency_discount" class="border-black" style="">
                    <td>
                      <strong>Subtotal before agency discount</strong>
                    </td>
                    <td class="text-end">
                      <span
                        t-esc="total_before_discount"
                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                      />
                    </td>
                  </tr>

                  <tr t-if="display_agency_discount" style="">
                    <td>
                      <strong>Sum of agency discount</strong>
                    </td>
                    <td class="text-end">
                      <span
                        t-esc="total_discount"
                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                      />
                    </td>
                  </tr>

                  <!--Tax totals-->
                  <t t-set="tax_totals" t-value="o.tax_totals" />
                  <t t-call="account.document_tax_totals" />

                  <!--Payments-->
                  <t t-if="print_with_payments">
                    <t t-if="o.payment_state != 'invoicing_legacy'">
                      <t
                        t-set="payments_vals"
                        t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"
                      />
                      <t t-foreach="payments_vals" t-as="payment_vals">
                        <tr t-if="payment_vals['is_exchange'] == 0">
                          <td>
                            <i class="oe_form_field text-end oe_payment_label">
                              Paid on
                              <t
                                t-esc="payment_vals['date']"
                                t-options='{"widget": "date"}'
                              />
                            </i>
                          </td>
                          <td class="text-end">
                            <span
                              t-esc="payment_vals['amount']"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                            />
                          </td>
                        </tr>
                      </t>
                      <t t-if="len(payments_vals) > 0">
                        <tr class="border-black fw-bold">
                          <td>Amount Due</td>
                          <td class="text-end">
                            <span t-field="o.amount_residual" />
                          </td>
                        </tr>
                      </t>
                    </t>
                  </t>
                </table>
              </div>
            </div>
          </div>

          <p
            t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference"
            name="payment_communication"
          >
            Please use the following communication for your payment :
            <b>
              <span t-field="o.payment_reference" />
            </b>
          </p>
          <p t-if="o.invoice_payment_term_id" name="payment_term">
            <span t-field="o.invoice_payment_term_id.note" />
          </p>
          <p t-if="o.narration" name="comment">
            <span t-field="o.narration" />
          </p>
          <p t-if="o.fiscal_position_id.note" name="note">
            <span t-field="o.fiscal_position_id.note" />
          </p>
          <p t-if="o.invoice_incoterm_id" name="incoterm">
            <strong>Incoterm:</strong>
            <span t-field="o.invoice_incoterm_id.code" />
            -
            <span t-field="o.invoice_incoterm_id.name" />
          </p>
          <div id="qrcode" t-if="o.display_qr_code and o.amount_residual > 0">
            <p t-if="qr_code_urls.get(o.id)">
              <strong class="text-center">Scan me with your banking app.</strong>
              <br />
              <br />
              <img class="border border-dark rounded" t-att-src="qr_code_urls[o.id]" />
            </p>
          </div>
        </div>
      </div>
    </t>
  </template>

  <!--
            Report Action (Invoice)
    -->
  <template id="report_invoice" inherit_id="account.report_invoice">
    <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
      <t
        t-if="o._get_name_invoice_report() == 'sale_advertising_order.report_invoice_document_sao'"
        t-call="sale_advertising_order.report_invoice_document_sao"
        t-lang="lang"
      />
    </xpath>
  </template>

  <template
    id="report_invoice_with_payments"
    inherit_id="account.report_invoice_with_payments"
  >
    <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
      <t
        t-if="o._get_name_invoice_report() == 'sale_advertising_order.report_invoice_document_sao'"
        t-call="sale_advertising_order.report_invoice_document_sao"
        t-lang="lang"
      />
    </xpath>
  </template>
</odoo>
