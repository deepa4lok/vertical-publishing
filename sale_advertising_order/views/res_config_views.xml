<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_sao_view" model="ir.ui.view">
            <field name="name">res.config.settings.view.inherit.sao</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="65"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="sao"
                         string="Sale Advertising Order"
                         data-key="sale_advertising_order"
                         groups="sale_advertising_order.group_ads_traffic_user">
                        <h2>Sale Advertising Order</h2>
                        <div class="row mt16 o_settings_container" name="sao_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                id="manage_sao">
                                <div class="o_setting_left_pane">
                                    <field name="group_sale_customer_contact"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Contact Person" for="group_sale_customer_contact"/>
                                    <div class="text-muted">
                                        Use Contact Person in Sale Orders.
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_sao_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="res_config_settings_sao_view" />
            <field name="target">inline</field>
            <field name="context">{'module' : 'sale_advertising_order', 'bin_size': False}</field>
        </record>

        <menuitem id="menu_sao_global_settings" name="Settings"
            parent="menu_advertising_config" sequence="0"
            action="action_sao_configuration"
            groups="sale_advertising_order.group_ads_traffic_user"/>
    </data>
</odoo>