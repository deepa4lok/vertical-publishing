<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <!-- Invoice -->
  <record id="view_move_form" model="ir.ui.view">
    <field name="name">account.invoice.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form" />
    <field name="arch" type="xml">
      <field name="partner_id" position="attributes">
        <attribute name="context">
          {'search_default_customer':1, 'show_address': 1, 'show_email':1}
        </attribute>
      </field>
      <field name="partner_id" position="after">
        <field
          name="customer_contact"
          groups="sale_advertising_order.group_ads_contact_person"
          context="{'default_parent_id': partner_id, 'show_email': 1, 'res_partner_search_mode': 'customer'}"
          domain="[('is_company', '=', False),('parent_id', '=', partner_id),('type', '=', 'contact')]"
          options='{"always_reload": True, "no_create_edit": True}'
        />
        <field name="published_customer" attrs="{'invisible': [('ad','!=',True)]}" />
      </field>
      <field name="invoice_payment_term_id" position="after">
        <field name="ad" />
      </field>
      <xpath
        expr="//sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='product_id']"
        position="before"
      >
        <field
          name="sale_order_id"
          widget="many2one_unclickable"
          options="{'no_open': True}"
          attrs="{'column_invisible':['|',('parent.ad', '!=', True), ('parent.move_type', 'in', ('in_invoice', 'in_refund'))]}"
          context="{'form_view_ref': 'sale_advertising_order.sale_order_view_form_sao'}"
        />
        <button
          type="object"
          name="open_sale_order"
          icon="fa-external-link"
          string="Open SO"
          class="oe_link btn-link"
          attrs="{'invisible': [('sale_order_id', '=', False)]}"
        />
      </xpath>
      <xpath
        expr="//sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='name']"
        position="after"
      >
        <field name="ad_number" optional="hide" />
        <field name="issue_date" optional="hide" />
        <!--                    <field name="from_date" optional="hide"/>-->
        <!--                    <field name="to_date" optional="hide"/>-->
      </xpath>
      <xpath
        expr="//sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
        position="after"
      >
        <field name="subtotal_before_agency_disc" optional="hide" />
      </xpath>

      <xpath expr="//notebook/page[@name='other_info']" position="before">
        <page string="Invoice Description">
          <div class="oe_clear">
            <label for="invoice_description" />
          </div>
          <field
            name="invoice_description"
            class="oe_inline"
            placeholder="Add description"
          />
        </page>
      </xpath>
    </field>
  </record>
  <!-- Invoice Lines -->
  <record id="view_move_line_tree" model="ir.ui.view">
    <field name="name">account.invoice.line.tree</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_move_line_tree" />
    <field name="arch" type="xml">
      <field name="name" position="before">
        <field
          name="sale_order_id"
          widget="many2one_clickable"
          context="{'form_view_ref': 'sale_advertising_order.sale_order_view_form_sao'}"
        />
      </field>
      <field name="name" position="after">
        <field name="ad_number" optional="hide" />
        <field name="issue_date" optional="hide" />
        <!--                    <field name="from_date" optional="hide"/>-->
        <!--                    <field name="to_date" optional="hide"/>-->
      </field>
      <field name="credit" position="after">
        <field name="subtotal_before_agency_disc" optional="hide" />
      </field>
    </field>
  </record>

  <record id="view_move_line_form" model="ir.ui.view">
    <field name="name">account.invoice.line.form</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_move_line_form" />
    <field name="arch" type="xml">
      <field name="company_id" position="after">
        <field
          name="sale_order_id"
          context="{'form_view_ref': 'sale_advertising_order.sale_order_view_form_sao'}"
        />
        <field name="subtotal_before_agency_disc" optional="hide" />
      </field>
    </field>
  </record>
</odoo>
